<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>All Chats</h1>

    <form method="get" action="/chats/new">
        <button class="newchat">New Chat</button>
    </form>
    <br/>
    <br/>
  <%  for(let chat of chats){%>
    <div class="chat">
        <p>From:<i><%=chat.from%></i></p>
        <div class="msg">
            <p><%=chat.msg%></p>
        <hr/>
            <form method="GET" action="/chats/<%=chat._id%>/edit">
                <button class="edit">Edit</button>
            </form>
            <form method="POST" action="/chats/<%=chat._id%>?_method=DELETE">
                <button class="DELETE">Delete</button>
            </form>
        </div>
        <p>To:<i><%=chat.to%></i></p>
        <hr/>
        <p>Time:<%=chat.createat.toString().split(" ")[4]%></p>
        <p>Date:<%=chat.createat.toString().split(" ").slice(0,4).join(" ")%></p>
     </div>
     </body></br>
    </br>
     </body>

    <%}%>
</body>
</html>